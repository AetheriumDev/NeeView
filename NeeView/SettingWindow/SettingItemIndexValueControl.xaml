<UserControl x:Class="NeeView.SettingItemIndexValueControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NeeView"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <DockPanel x:Name="Root">
        <TextBlock DockPanel.Dock="Right" Text="{Binding ValueString}" Width="80"/>
        <Grid x:Name="StretchArea">
            <Slider Value="{Binding Index}" Minimum="0" Maximum="{Binding IndexMax}" TickFrequency="1"
                    Width="{Binding ElementName=StretchArea, Path=ActualWidth}" MaxWidth="300" HorizontalAlignment="Right"/>
        </Grid>
    </DockPanel>
</UserControl>
