<UserControl x:Class="NeeView.SettingItemControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NeeView"
             mc:Ignorable="d" 
             d:DesignHeight="30" d:DesignWidth="400">
    <Border x:Name="Root" BorderBrush="WhiteSmoke" BorderThickness="0,0,0,1" Background="Transparent">
        <DockPanel Margin="5" >
            <ContentControl x:Name="ContentValue" DockPanel.Dock="Right" VerticalAlignment="Center" Focusable="False"/>
            <TextBlock x:Name="Header" TextWrapping="Wrap" VerticalAlignment="Bottom" MinWidth="200" Margin="0,0,20,0">
                <TextBlock.Style>
                    <Style TargetType="TextBlock">
                        <Style.Triggers>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.5"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </TextBlock.Style>
            </TextBlock>
            <ContentControl x:Name="ContentStretch" VerticalAlignment="Center" Focusable="False"/>
        </DockPanel>
    </Border>
</UserControl>
