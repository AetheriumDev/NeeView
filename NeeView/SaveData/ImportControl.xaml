<UserControl x:Class="NeeView.ImportControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NeeView"
             xmlns:properties="clr-namespace:NeeView.Properties"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="400">
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
    </UserControl.Resources>
    <Grid>
        <StackPanel>
            <TextBlock x:Name="FileNameTextBlock" Text="{Binding Title}" Margin="0"/>
            <StackPanel Margin="10">
                <CheckBox x:Name="UserSettingCheckBox" Content="{x:Static properties:Resources.ImportControl_Setting}" IsEnabled="{Binding UserSettingExists}" IsChecked="{Binding IsUserSettingEnabled}"/>
                <CheckBox x:Name="HistoryCheckBox" Content="{x:Static properties:Resources.ImportControl_History}" IsEnabled="{Binding HistoryExists}" IsChecked="{Binding IsHistoryEnabled}"/>
                <CheckBox x:Name="BookmarkCheckBox" Content="{x:Static properties:Resources.ImportControl_Bookmark}" IsEnabled="{Binding BookmarkExists}" IsChecked="{Binding IsBookmarkEnabled}"/>
                <CheckBox x:Name="PagemarkCheckBox" Content="{x:Static properties:Resources.ImportControl_Pagemark}" IsEnabled="{Binding PagemarkExists}" IsChecked="{Binding IsPagemarkEnabled}"
                        Visibility="{Binding PagemarkExists, Converter={StaticResource BooleanToVisibilityConverter}}" />
                <CheckBox x:Name="PlaylistCheckBox" Content="{Binding PlaylistsCheckBoxContent}" IsEnabled="{Binding PlaylistsExists}" IsChecked="{Binding IsPlaylistsEnabled}" />
                <CheckBox x:Name="ThemeCheckBox" Content="{Binding ThemesCheckBoxContent}" IsEnabled="{Binding ThemesExists}" IsChecked="{Binding IsThemesEnabled}" />
                <!--
                Visibility="{Binding PlaylistsExists, Converter={StaticResource BooleanToVisibilityConverter}}" />
                Visibility="{Binding ThemesExists, Converter={StaticResource BooleanToVisibilityConverter}}" />
                -->
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>
