<Window x:Class="NeeView.VersionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NeeView"
        mc:Ignorable="d"
        Style="{StaticResource DefaultWindowStyle}"
        Title="NeeView について" Height="230" Width="360" ResizeMode="NoResize" WindowStyle="ToolWindow">
    <Window.Resources>

        <local:VersionToStringConverter x:Key="VersionToStringConverter"/>

        <Style TargetType="Hyperlink">
            <Setter Property="ToolTip" Value="{Binding RelativeSource={RelativeSource Self}, Path=NavigateUri}"/>
            <EventSetter Event="RequestNavigate"  Handler="Hyperlink_RequestNavigate"/>
        </Style>
    </Window.Resources>
    <DockPanel Background="#F8F8F8">

        <Grid DockPanel.Dock="Bottom" Background="#F0F0F0">
            <Grid.Resources>
                <Style x:Key="LinkedTextBlock" TargetType="TextBlock">
                    <Setter Property="Margin" Value="30,20"/>
                </Style>
            </Grid.Resources>

            <TextBlock HorizontalAlignment="Left" Style="{StaticResource LinkedTextBlock}">
                <Hyperlink NavigateUri="{Binding LicenseUri}" >
                           ライセンス情報
                </Hyperlink>
            </TextBlock>

            <TextBlock HorizontalAlignment="Center" Style="{StaticResource LinkedTextBlock}">
                <Hyperlink NavigateUri="{Binding ChangeLogUri}">
                           更新履歴
                </Hyperlink>
            </TextBlock>

            <TextBlock HorizontalAlignment="Right" Style="{StaticResource LinkedTextBlock}">
                <Hyperlink NavigateUri="{Binding ProjectUri}">
                           プロジェクトページ
                </Hyperlink>
            </TextBlock>
        </Grid>

        <Image DockPanel.Dock="Left" Width="32" VerticalAlignment="Top" Source="Resources/App.ico" Margin="40,30"/>

        <StackPanel DockPanel.Dock="Top" Margin="0,10,10,10">
            <TextBlock Text="NeeView" FontSize="32" FontFamily="Trebuchet MS"/>
            <TextBlock Text="{Binding Checker.CurrentVersion, Converter={StaticResource VersionToStringConverter}}" FontSize="15" Margin="0,0,0,5"/>

            <StackPanel HorizontalAlignment="Left">
                <TextBlock Text="{Binding Checker.Message}">
                    <TextBlock.Style>
                        <Style TargetType="TextBlock">
                            <Setter Property="Foreground" Value="Gray"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding Checker.IsExistNewVersion}" Value="True">
                                    <Setter Property="Foreground" Value="Black"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                </TextBlock>
                <TextBlock HorizontalAlignment="Left" Margin="0,10">
                    <Hyperlink NavigateUri="{Binding Checker.DownloadUri}">ダウンロードページに移動する</Hyperlink>
                    <TextBlock.Style>
                        <Style TargetType="TextBlock">
                            <Setter Property="Visibility" Value="Hidden"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding Checker.IsExistNewVersion}" Value="True">
                                    <Setter Property="Visibility" Value="Visible"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                </TextBlock>
            </StackPanel>
        </StackPanel>


    </DockPanel>
</Window>
