<UserControl x:Class="NeeView.MoreMenuButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NeeView"
             xmlns:nvc="clr-namespace:NeeView.Windows.Controls"
             mc:Ignorable="d"
             Width="30" Height="30"
             d:DesignHeight="450" d:DesignWidth="800">
    
    <ToggleButton x:Name="MoreButton" Style="{StaticResource IconToggleButton}" MouseRightButtonUp="MoreButton_MouseRightButtonUp"
            Checked="MoreButton_Checked" nvc:DropDownMenuBehavior.DropDownMenu="{Binding MoreMenu}">
        <Image Source="{StaticResource ic_more_24px_b}" Width="16" Height="16" />
    </ToggleButton>
</UserControl>
