<UserControl x:Class="NeeView.PanelListThumbnailImage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NeeView"
             mc:Ignorable="d" 
             d:DataContext="{d:DesignInstance local:Thumbnail_Design, IsDesignTimeCreatable=True}"
             d:DesignHeight="100" d:DesignWidth="100">

    <UserControl.Resources>
        <local:ImageSourceToThumbnailConverter x:Key="ImageSourceToThumbnailConverter"/>
        <local:ThumbnailToMarginConverter x:Key="ThumbnailToMarginConverter"/>
        <local:ThumbnailToStretchConverter x:Key="ThumbnailToStretchConverter"/>
    </UserControl.Resources>

    <Grid x:Name="Root"
        Width="{Binding Source={x:Static local:SidePanelProfile.Current}, Path=ThumbnailItemProfile.ShapeWidth}"
        Height="{Binding Source={x:Static local:SidePanelProfile.Current}, Path=ThumbnailItemProfile.ShapeHeight}">
        <Image HorizontalAlignment="Center" VerticalAlignment="Bottom" RenderOptions.BitmapScalingMode="HighQuality" UseLayoutRounding="True"
               Height="{Binding Source={x:Static local:SidePanelProfile.Current}, Path=ThumbnailItemProfile.ShapeHeight}"
               Source="{Binding Thumbnail.BitmapSource, Converter={StaticResource ImageSourceToThumbnailConverter}}">
            <Image.Stretch>
                <MultiBinding Converter="{StaticResource ThumbnailToStretchConverter}">
                    <Binding Path="Thumbnail"/>
                    <Binding Source="{x:Static local:SidePanelProfile.Current}" Path="ThumbnailItemProfile.ImageStretch"/>
                </MultiBinding>
            </Image.Stretch>
            <Image.Margin>
                <MultiBinding Converter="{StaticResource ThumbnailToMarginConverter}">
                    <Binding Path="Thumbnail"/>
                    <Binding Source="{x:Static local:SidePanelProfile.Current}" Path="ThumbnailItemProfile.ImageWidth"/>
                </MultiBinding>
            </Image.Margin>
        </Image>
    </Grid>
</UserControl>
