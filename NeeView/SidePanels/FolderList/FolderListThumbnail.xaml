<UserControl x:Class="NeeView.FolderListThumbnail"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NeeView"
             mc:Ignorable="d" 
             d:DataContext="{d:DesignInstance local:Thumbnail_Design, IsDesignTimeCreatable=True}"
             d:DesignHeight="100" d:DesignWidth="100">
    
    <Grid>
        <Image
           Width="{DynamicResource ThumbnailWidth}" Height="{DynamicResource ThumbnailHeight}" Margin="5,0"
           HorizontalAlignment="Center" VerticalAlignment="Center"
           RenderOptions.BitmapScalingMode="HighQuality"
           Stretch="Uniform"
           UseLayoutRounding="True"
           Source="{Binding BitmapSource}"
           ToolTipOpening="Image_ToolTipOpening"
           ToolTipService.IsEnabled="{Binding IsUniqueImage}">
            <Image.ToolTip>
                <Image Source="{Binding BitmapSource}"/>
            </Image.ToolTip>
        </Image>
    </Grid>
</UserControl>
