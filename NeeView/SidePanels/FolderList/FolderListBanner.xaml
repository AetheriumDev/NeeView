<UserControl x:Class="NeeView.FolderListBanner"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NeeView"
             xmlns:system="clr-namespace:System;assembly=mscorlib"
             mc:Ignorable="d" 
             d:DataContext="{d:DesignInstance local:Thumbnail_Design, IsDesignTimeCreatable=True}"
             d:DesignHeight="256" d:DesignWidth="256">

    <Rectangle ToolTipService.IsEnabled="{Binding IsUniqueImage}" Width="{DynamicResource BannerWidth}" Height="{DynamicResource BannerHeight}">
        <Rectangle.Fill>
            <VisualBrush Stretch="UniformToFill" Viewbox="0,0,1,0.75" >
                <VisualBrush.Visual>
                    <Image Source="{Binding BitmapSource}"/>
                </VisualBrush.Visual>
            </VisualBrush>
        </Rectangle.Fill>
    </Rectangle>
</UserControl>
