<UserControl x:Class="NeeView.NavigateThumbnail"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NeeView"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             Background="Transparent"
             ClipToBounds="True">
    
    <UserControl.Resources>
        <local:BooleanToVisibilityConverter x:Key="BooleanToVisibilityHiddenConverter" False="Hidden" />
    </UserControl.Resources>

    <Border x:Name="Root" HorizontalAlignment="Center" BorderThickness="0" BorderBrush="Gray" Visibility="{Binding IsVisible, Converter={StaticResource BooleanToVisibilityHiddenConverter}}" >
        <Grid x:Name="ThumbnailGrid" Width="{Binding ThumbnailWidth}" Height="{Binding ThumbnailHeight}" Background="{Binding MainViewVisualBrush}" Margin="1">
            <Canvas>
                <Path Stroke="Red" StrokeThickness="1" Data="{Binding ViewboxGeometry}" RenderOptions.EdgeMode="Unspecified" />
            </Canvas>
        </Grid>
    </Border>
</UserControl>
