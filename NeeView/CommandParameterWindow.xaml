<Window x:Class="NeeView.CommandParameterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NeeView"
        mc:Ignorable="d"
        Title="コマンドパラメータ設定" SizeToContent="Height" MinHeight="150" Width="512">

    <Window.Resources>

        <DataTemplate DataType="{x:Type local:Value_Object}">
            <ContentControl Content="{Binding Value}" Foreground="Gray"/>
        </DataTemplate>

        <DataTemplate DataType="{x:Type local:Value_Boolean}">
            <CheckBox IsChecked="{Binding Value}"/>
        </DataTemplate>

        <DataTemplate DataType="{x:Type local:Value_String}">
            <TextBox Text="{Binding Value}"/>
        </DataTemplate>

        <DataTemplate DataType="{x:Type local:Value_Integer}">
            <TextBox Text="{Binding Value}"/>
        </DataTemplate>

        <DataTemplate DataType="{x:Type local:CommandParameterProperty}">
            <Grid Margin="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*" MinWidth="100"/>
                    <ColumnDefinition Width="3*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Column="0" Text="{Binding Name}" ToolTip="{Binding Tips}" TextTrimming="CharacterEllipsis" />
                <ContentControl Grid.Column="1" Content="{Binding TypeValue}" VerticalAlignment="Center" Margin="5,0"/>
            </Grid>
        </DataTemplate>


        <Style x:Key="NormalButtonStyle" TargetType="Button">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="20,5"/>
            <Setter Property="MinWidth" Value="100"/>
            <Setter Property="Height" Value="30"/>
        </Style>

    </Window.Resources>

    <Grid>
        <DockPanel Margin="5">
            <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Style="{StaticResource NormalButtonStyle}" Content="初期化"  Click="ButtonReset_Click"/>
                <Button Style="{StaticResource NormalButtonStyle}" Content="OK"  Click="ButtonOk_Click"/>
                <Button Style="{StaticResource NormalButtonStyle}" Content="Cancel" Click="ButtonCancel_Click"/>
            </StackPanel>

            <GroupBox Header="{Binding Name}" Margin="5">
                <ItemsControl x:Name="Items" ItemsSource="{Binding Properties}" Margin="5"/>
            </GroupBox>
        </DockPanel>
    </Grid>
</Window>
