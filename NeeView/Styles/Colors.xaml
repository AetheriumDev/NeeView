    <SolidColorBrush x:Key="PageSelectionBar.Slider.Border" Color="Gray" />
    <SolidColorBrush x:Key="PageSelectionBar.Slider.Thumb" Color="SteelBlue" />
    <SolidColorBrush x:Key="PageSelectionBar.Slider.Track" Color="SteelBlue" />

    <SolidColorBrush x:Key="Toast.Background" Color="Gray" />
    <SolidColorBrush x:Key="Toast.Foreground" Color="White" />
    <SolidColorBrush x:Key="Toast.Border" Color="Gray" />

    <SolidColorBrush x:Key="Notification.Background" Color="#88000000" />
    <SolidColorBrush x:Key="Notification.Foreground" Color="White" />

    <SolidColorBrush x:Key="Thumbnail.Background" Color="Gray" />
    <SolidColorBrush x:Key="Thumbnail.Foreground" Color="DarkGray" />

    <SolidColorBrush x:Key="CheckIcon.Foreground" Color="LightGreen" />
    <SolidColorBrush x:Key="BookmarkIcon.Foreground" Color="Orange" />
    <SolidColorBrush x:Key="PagemarkIcon.Foreground" Color="Orange" />
    <SolidColorBrush x:Key="SelectedMark.Foreground" Color="Orange" />


</ResourceDictionary>