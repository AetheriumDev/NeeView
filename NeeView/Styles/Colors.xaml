    <SolidColorBrush x:Key="SidePanel.Note" Color="Gray" />
    <SolidColorBrush x:Key="SidePanel.Sepalator" Color="Gray" />
    <SolidColorBrush x:Key="SidePanel.Splitter" Color="#FF333333" />

    <SolidColorBrush x:Key="MenuBar.Background" Color="#FF282828" />
    <SolidColorBrush x:Key="MenuBar.Foreground" Color="White" />
    <SolidColorBrush x:Key="MenuBar.Border" Color="Gray" />
