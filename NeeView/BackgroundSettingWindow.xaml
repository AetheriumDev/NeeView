<Window x:Class="NeeView.BackgroundSettingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NeeView"
        xmlns:osc="clr-namespace:OpenSourceControls"
        xmlns:nlc="clr-namespace:NeeLaboratory.Controls"
        mc:Ignorable="d"
        Style="{StaticResource ToolDialogStyle}"
        Title="カスタム背景設定" Height="400" Width="400">

    <Window.Resources>
        <local:EnumToBooleanConverter x:Key="EnumToBooleanConverter"/>
    </Window.Resources>

    <DockPanel Margin="10">

        <!-- Buttons -->
        <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal" HorizontalAlignment="Right">
            <StackPanel.Resources>
                <Style TargetType="Button">
                    <Setter Property="Padding" Value="20,5"/>
                    <Setter Property="MinWidth" Value="80"/>
                    <Setter Property="Margin" Value="5"/>
                </Style>
            </StackPanel.Resources>
            <Button x:Name="OKButton" Content="OK" Click="OKButton_Click"/>
            <Button x:Name="CancelButton" Content="Cancel" Click="CancelButton_Click"/>
        </StackPanel>

        <!-- Parameters -->
        <StackPanel DockPanel.Dock="Top" Margin="10" >
            <DockPanel Margin="5">
                <RadioButton Content="背景色" MinWidth="100" VerticalAlignment="Center"
                                 IsChecked="{Binding Source.Type, Converter={StaticResource EnumToBooleanConverter}, ConverterParameter=SolidColor}"/>
                <TextBox Text="{Binding Source.Color}" MinWidth="100" BorderThickness="1,1,0,1" Padding="0,0,2,0"/>
                <osc:ComboColorPicker SelectedColor="{Binding Source.Color, Mode=TwoWay}"/>
            </DockPanel>
            <DockPanel Margin="5">
                <RadioButton Content="タイル画像" MinWidth="100" VerticalAlignment="Center"
                                 IsChecked="{Binding Source.Type, Converter={StaticResource EnumToBooleanConverter}, ConverterParameter=ImageTile}"/>
                <nlc:FileNameBox SelectDirectory="False" Title="画像の選択" Filter="すべてのファイル|*.*" MinHeight="24"
                                 Note="画像ファイルを選択してください"
                                 Text="{Binding Source.ImageFileName, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"/>
            </DockPanel>
        </StackPanel>

        <!-- Preview -->
        <Grid Margin="10">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" UseLayoutRounding="True">
                <Border BorderBrush="Gray" BorderThickness="1" >
                    <Viewbox Width="200" Height="150">
                        <Rectangle Width="800" Height="600" RenderOptions.BitmapScalingMode="HighQuality" Fill="{Binding PreviewBrush}"/>
                    </Viewbox>
                </Border>
                <TextBlock Text="プレビュー (25%)" HorizontalAlignment="Center"/>
            </StackPanel>
        </Grid>
    </DockPanel>
</Window>
