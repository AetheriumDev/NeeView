<UserControl x:Class="NeeView.CommandParameterControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NeeView"
             xmlns:nlp="clr-namespace:NeeView.Windows.Property"
             mc:Ignorable="d" 
             d:DesignHeight="200" d:DesignWidth="512">
    <Grid>

        <Grid.Resources>
            <Style x:Key="NormalButtonStyle" TargetType="Button">
                <Setter Property="Margin" Value="5"/>
                <Setter Property="Padding" Value="20,5"/>
                <Setter Property="MinWidth" Value="100"/>
                <Setter Property="Height" Value="30"/>
            </Style>
        </Grid.Resources>

        <DockPanel Margin="5">
            <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Style="{StaticResource NormalButtonStyle}" Content="初期化"  Click="ButtonReset_Click"/>
                <!--
                <Button Style="{StaticResource NormalButtonStyle}" Content="OK"  Click="ButtonOk_Click"/>
                <Button Style="{StaticResource NormalButtonStyle}" Content="Cancel" Click="ButtonCancel_Click"/>
                -->
            </StackPanel>
            
            <TextBlock DockPanel.Dock="Top" Text="{Binding Note}" Foreground="Red" Margin="0,5">
                <TextBlock.Style>
                    <Style TargetType="TextBlock">
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding Note}" Value="{x:Null}">
                                <Setter Property="Visibility" Value="Collapsed"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </TextBlock.Style>
            </TextBlock>

            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <nlp:PropertyInspector x:Name="Inspector" Document="{Binding PropertyDocument}" Margin="5"
                                       IsResetButtonVisible="False" ColumnRate="0.5"/>
            </ScrollViewer>

        </DockPanel>
    </Grid>
</UserControl>
