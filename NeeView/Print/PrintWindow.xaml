<Window x:Class="NeeView.PrintWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NeeView"
        xmlns:properties="clr-namespace:NeeView.Properties"
        xmlns:nvc="clr-namespace:NeeView.Windows.Controls"
        mc:Ignorable="d"
        Style="{StaticResource DefaultWindowStyle}"
        Title="{x:Static properties:Resources.PrintWindow_Title}" Height="600" Width="800" ResizeMode="CanResizeWithGrip">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Styles/NVTheme.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <Style x:Key="TextButton" TargetType="Button" BasedOn="{StaticResource NVDialogButton}">
                <Setter Property="Margin" Value="10,10,0,0" />
            </Style>

            <Style x:Key="TextRecommentedButton" TargetType="Button" BasedOn="{StaticResource NVDialogRecommentedButton}">
                <Setter Property="Margin" Value="10,10,0,0" />
            </Style>


            <Style x:Key="Header" TargetType="TextBlock">
                <Setter Property="VerticalAlignment" Value="Center" />
                <Setter Property="TextTrimming" Value="CharacterEllipsis" />
            </Style>

            <Style x:Key="Body" TargetType="TextBlock">
                <Setter Property="Background" Value="Transparent" />
            </Style>

            <Style TargetType="nvc:EnterTriggerTextBox" BasedOn="{StaticResource {x:Type TextBox}}" />

            <Style x:Key="BoxHeader" TargetType="TextBlock">
                <Setter Property="MinWidth" Value="40" />
                <Setter Property="Padding" Value="2,0" />
                <Setter Property="VerticalAlignment" Value="Center" />
                <Setter Property="TextAlignment" Value="Right" />
            </Style>


            <Style x:Key="ItemStack" TargetType="StackPanel">
                <Setter Property="Margin" Value="0,5" />
            </Style>

            <Style x:Key="ItemDock" TargetType="DockPanel">
                <Setter Property="Margin" Value="0,5" />
            </Style>

        </ResourceDictionary>
    </Window.Resources>

    <Grid>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300" MinWidth="{Binding ElementName=Buttons, Path=ActualWidth}" />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>

            <!-- panel -->
            <DockPanel Grid.Column="0" Margin="10,10,2,10">

                <StackPanel DockPanel.Dock="Top" Style="{StaticResource ItemStack}" Margin="0,0,10,0">
                    <TextBlock Style="{StaticResource Header}" Text="{x:Static properties:Resources.PrintWindow_Printer}"/>
                    <Button Style="{StaticResource IconButton}" Command="{Binding PrintDialogCommand}" HorizontalContentAlignment="Left" TabIndex="1">
                        <TextBlock Text="{Binding Model.PrintQueue.FullName}" MinWidth="50" TextTrimming="CharacterEllipsis" Margin="2" />
                    </Button>
                </StackPanel>

                <StackPanel x:Name="Buttons" DockPanel.Dock="Bottom" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,10,0">
                    <Button x:Name="PrintButton" Style="{StaticResource TextRecommentedButton}" Content="{x:Static properties:Resources.PrintWindow_ButtonPrint}" Command="{Binding PrintCommand}" TabIndex="3"/>
                    <Button x:Name="CancelButton" Style="{StaticResource TextButton}" Content="{x:Static properties:Resources.Word_Cancel}" Command="{Binding CancelCommand}" TabIndex="3"/>
                </StackPanel>
                        
                <ScrollViewer Style="{StaticResource DarkScrollViewer}" VerticalScrollBarVisibility="Visible" CanContentScroll="False" >
                    <StackPanel>

                        <DockPanel Style="{StaticResource ItemDock}">
                            <ComboBox DockPanel.Dock="Right" ItemsSource="{Binding Model.PageOrientationList}" DisplayMemberPath="Value" SelectedValuePath="Key" SelectedValue="{Binding Model.PageOrientation}" TabIndex="2"/>
                            <TextBlock Style="{StaticResource Header}" Text="{x:Static properties:Resources.PrintWindow_Orientation}"/>
                        </DockPanel>

                        <StackPanel Style="{StaticResource ItemStack}">
                            <TextBlock Style="{StaticResource Header}"  Text="{x:Static properties:Resources.PrintWindow_Content}"/>
                            <ComboBox HorizontalAlignment="Right" ItemsSource="{Binding Model.PrintModeList}" DisplayMemberPath="Value" SelectedValuePath="Key" SelectedValue="{Binding Model.PrintMode}" TabIndex="2"/>
                        </StackPanel>

                        <StackPanel Style="{StaticResource ItemStack}" Margin="20,0,5,5">
                            <CheckBox Content="{x:Static properties:Resources.PrintWindow_Background}" IsChecked="{Binding Model.IsBackground}"
                                    FocusVisualStyle="{StaticResource NVBorderFocusVisual}" TabIndex="2"/>
                            <CheckBox Content="{x:Static properties:Resources.PrintWindow_KeepDot}" IsChecked="{Binding Model.IsDotScale}"
                                    FocusVisualStyle="{StaticResource NVBorderFocusVisual}" TabIndex="2"/>
                        </StackPanel>

                        <Border Margin="0,10,0,0" UseLayoutRounding="True">
                            <StackPanel>
                                <StackPanel Style="{StaticResource ItemStack}">
                                    <DockPanel>
                                        <ComboBox DockPanel.Dock="Right" ItemsSource="{Binding Model.HorizontalAlignmentList}" DisplayMemberPath="Value" SelectedValuePath="Key" SelectedValue="{Binding Model.HorizontalAlignment}" TabIndex="2"/>
                                        <TextBlock Style="{StaticResource Header}" Text="{x:Static properties:Resources.PrintWindow_Horizontal}"/>
                                    </DockPanel>
                                    <DockPanel>
                                        <ComboBox DockPanel.Dock="Right" ItemsSource="{Binding Model.VerticalAlignmentList}" DisplayMemberPath="Value" SelectedValuePath="Key" SelectedValue="{Binding Model.VerticalAlignment}" TabIndex="2"/>
                                        <TextBlock Style="{StaticResource Header}" Text="{x:Static properties:Resources.PrintWindow_Vertival}"/>
                                    </DockPanel>
                                </StackPanel>
                                <StackPanel Style="{StaticResource ItemStack}">
                                    <TextBlock Style="{StaticResource Header}" Text="{x:Static properties:Resources.PrintWindow_Margin}"/>
                                    <UniformGrid Columns="2" Rows="2" Margin="20,0,0,0">
                                        <DockPanel>
                                            <TextBlock Style="{StaticResource BoxHeader}" Text="{x:Static properties:Resources.Word_Left}"/>
                                            <nvc:EnterTriggerTextBox Text="{Binding Model.Margin.Left}" Margin="2" TabIndex="2"/>
                                        </DockPanel>
                                        <DockPanel>
                                            <TextBlock Style="{StaticResource BoxHeader}" Text="{x:Static properties:Resources.Word_Right}"/>
                                            <nvc:EnterTriggerTextBox Text="{Binding Model.Margin.Right}" Margin="2" TabIndex="2"/>
                                        </DockPanel>
                                        <DockPanel>
                                            <TextBlock Style="{StaticResource BoxHeader}" Text="{x:Static properties:Resources.Word_Up}"/>
                                            <nvc:EnterTriggerTextBox Text="{Binding Model.Margin.Top}" Margin="2" TabIndex="2"/>
                                        </DockPanel>
                                        <DockPanel>
                                            <TextBlock Style="{StaticResource BoxHeader}" Text="{x:Static properties:Resources.Word_Down}"/>
                                            <nvc:EnterTriggerTextBox Text="{Binding Model.Margin.Bottom}" Margin="2" TabIndex="2"/>
                                        </DockPanel>
                                    </UniformGrid>

                                    <StackPanel Style="{StaticResource ItemStack}">
                                        <TextBlock Style="{StaticResource Header}" Text="{x:Static properties:Resources.PrintWindow_Sheets}"/>
                                        <UniformGrid Columns="2" Margin="20,0,0,0">
                                            <DockPanel>
                                                <TextBlock Style="{StaticResource BoxHeader}" Text="{x:Static properties:Resources.PrintWindow_Column}"/>
                                                <nvc:EnterTriggerTextBox Text="{Binding Model.Columns}" Margin="2" TabIndex="2"/>
                                            </DockPanel>
                                            <DockPanel>
                                                <TextBlock Style="{StaticResource BoxHeader}" Text="{x:Static properties:Resources.PrintWindow_Row}" />
                                                <nvc:EnterTriggerTextBox Text="{Binding Model.Rows}" Margin="2" TabIndex="2"/>
                                            </DockPanel>
                                        </UniformGrid>
                                    </StackPanel>

                                </StackPanel>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </ScrollViewer>
            </DockPanel>

            <!-- Preview -->
            <Grid Grid.Column="1" Background="#FEEE">
                <Grid>
                    <Grid.Effect>
                        <DropShadowEffect Opacity="0.5" RenderingBias="Quality" ShadowDepth="2"/>
                    </Grid.Effect>
                    <Viewbox Margin="32">
                        <local:PrintPreviewControl Columns="{Binding Model.Columns}" Rows="{Binding Model.Rows}" ItemsSource="{Binding PageCollection}"/>
                    </Viewbox>
                </Grid>
            </Grid>

            <!-- splitter -->
            <GridSplitter Grid.Column="1" Width="8" HorizontalAlignment="Left" Background="Transparent" FocusVisualStyle="{StaticResource NVFocusVisual}" IsTabStop="False" />

        </Grid>
    </Grid>
</Window>
