<UserControl x:Class="NeeLaboratory.Controls.FileNameBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NeeLaboratory.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="20" d:DesignWidth="300">

    <UserControl.Resources>
        <local:NotBoolToVisiblityConverter x:Key="NotBoolToVisiblityConverter"/>
    </UserControl.Resources>

    <Grid>
        <TextBox x:Name="PathTextBox" Padding="0,0,22,0" VerticalContentAlignment="Center" Text="{Binding Text, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type local:FileNameBox}}}" PreviewDragOver="PathTextBox_PreviewDragOver" Drop="PathTextBox_Drop">
        </TextBox>


        <TextBlock x:Name="PathTextBlock" Text="{Binding Note, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type local:FileNameBox}}}" VerticalAlignment="Center" Margin="4,0" Foreground="Gray" IsHitTestVisible="False">
            <TextBlock.Style>
                <Style TargetType="TextBlock">
                    <Setter Property="Visibility" Value="Hidden"/>
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding ElementName=PathTextBox, Path=Text}" Value="">
                            <Setter Property="Visibility" Value="Visible"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </TextBlock.Style>
        </TextBlock>
        <Button x:Name="ButtonOpenDialog" Content="..." Width="20" Height="{Binding ElementName=PathTextBox, Path=ActualHeight}" Click="ButtonOpenDialog_Click" HorizontalAlignment="Right"/>
      
    </Grid>


</UserControl>
