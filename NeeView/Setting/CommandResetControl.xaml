<UserControl x:Class="NeeView.Setting.CommandResetControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NeeView.Setting"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <StackPanel x:Name="Root">
        <ComboBox x:Name="InputSchemeComboBox" Margin="0" ItemsSource="{Binding InputSchemeList}" SelectedValuePath="Key" DisplayMemberPath="Value" SelectedValue="{Binding InputScheme}" FocusVisualStyle="{StaticResource NVBorderFocusVisual}"/>
        <TextBlock x:Name="InputSchemeNote" Margin="5,0" TextWrapping="Wrap" MinHeight="64"/>
    </StackPanel>
    
</UserControl>
