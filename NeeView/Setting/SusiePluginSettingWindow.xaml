<Window x:Class="NeeView.Setting.SusiePluginSettingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NeeView.Setting"
        xmlns:properties="clr-namespace:NeeView.Properties"
        mc:Ignorable="d"
        Title="{Binding Name}" Width="400" SizeToContent="Height">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>

        <Style TargetType="{x:Type Button}">
            <Setter Property="MinWidth" Value="75"/>
            <Setter Property="MinHeight" Value="28"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="10,0"/>
        </Style>
        <Style TargetType="{x:Type CheckBox}">
            <Setter Property="Margin" Value="0,2"/>
        </Style>
    </Window.Resources>

    <Grid>
        <DockPanel>

            <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal" HorizontalAlignment="Right" Margin="10,0,10,5">
                <Button x:Name="CloseButton" Content="{x:Static properties:Resources.WordOK}" Click="CloseButton_Click"/>
            </StackPanel>

            <StackPanel Margin="10,10,10,0">
                <TextBlock Text="{Binding Version}" TextWrapping="Wrap" FontWeight="Bold" Margin="0,5,0,10"/>
                <TextBlock Text="{Binding Extensions}" TextWrapping="Wrap" />
                <Button x:Name="ConfigButton" HorizontalAlignment="Right" Click="ConfigButton_Click"
                        Visibility="{Binding CanOpenConfigDialog, Converter={StaticResource BooleanToVisibilityConverter}}">

                    <StackPanel Orientation="Horizontal">
                        <Image Source="{StaticResource ic_setting_24px}" Width="14" Height="14"/>
                        <TextBlock Text="{x:Static properties:Resources.WordConfig}" Margin="5,0"/>
                    </StackPanel>
                </Button>

                <StackPanel Margin="0,15,0,0">
                    <CheckBox Content="{x:Static properties:Resources.ParamSusiePluginIsEnabled}" IsChecked="{Binding IsEnabled}"/>
                    <CheckBox Content="{x:Static properties:Resources.ParamSusiePluginIsPreExtract}" IsChecked="{Binding IsPreExtract}" Visibility="{Binding IsArchiver, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                </StackPanel>
            </StackPanel>
        </DockPanel>
    </Grid>
</Window>
