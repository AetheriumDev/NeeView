<Window x:Class="NeeView.Setting.SusiePluginSettingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NeeView.Setting"
        xmlns:properties="clr-namespace:NeeView.Properties"
        mc:Ignorable="d"
        Style="{StaticResource ToolWindowStyle}"
        Title="{Binding Name}" Width="600" Height="600">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>

        <Style TargetType="{x:Type Button}">
            <Setter Property="MinWidth" Value="75"/>
            <Setter Property="MinHeight" Value="28"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="10,0"/>
        </Style>
        <Style TargetType="{x:Type CheckBox}">
            <Setter Property="Margin" Value="0,2"/>
        </Style>
    </Window.Resources>

    <Grid>
        <DockPanel>

            <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal" HorizontalAlignment="Right" Margin="10,5,10,5">
                <Button x:Name="CloseButton" Content="{x:Static properties:Resources.WordOK}" Click="CloseButton_Click"/>
            </StackPanel>

            <DockPanel Margin="10">

                <DockPanel DockPanel.Dock="Top" Background="#EEE">

                    <TextBlock DockPanel.Dock="Top" Text="{Binding Name}" TextWrapping="Wrap" FontWeight="Bold" Margin="10,10,10,0" />

                    <TextBlock DockPanel.Dock="Top" Text="{Binding Version}" TextWrapping="Wrap" Margin="10,10,10,0" MinHeight="50"/>

                    <DockPanel DockPanel.Dock="Top" HorizontalAlignment="Right" LastChildFill="False">
                        <Button x:Name="ConfigButton" DockPanel.Dock="Right" Click="ConfigButton_Click" Margin="10"
                                Visibility="{Binding CanOpenConfigDialog, Converter={StaticResource BooleanToVisibilityConverter}}">
                            <StackPanel Orientation="Horizontal">
                                <Image Source="{StaticResource ic_setting_24px}" Width="14" Height="14"/>
                                <TextBlock Text="{x:Static properties:Resources.WordConfig}" Margin="5,0"/>
                            </StackPanel>
                        </Button>
                    </DockPanel>
                </DockPanel>

                <StackPanel DockPanel.Dock="Top" Margin="0,15,0,5">
                    <CheckBox Content="{x:Static properties:Resources.ParamSusiePluginIsEnabled}" IsChecked="{Binding IsEnabled}"/>
                    <CheckBox Content="{x:Static properties:Resources.ParamSusiePluginIsPreExtract}" IsChecked="{Binding IsPreExtract}" Visibility="{Binding IsArchiver, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                </StackPanel>

                <TextBlock DockPanel.Dock="Top" Text="{x:Static properties:Resources.WordExtension}" FontWeight="Bold" Margin="0,15,0,5"/>
                <local:SettingItemCollectionControl Collection="{Binding Extensions}" DefaultCollection="{Binding DefaultExtensions}" IsHeightLocked="False"/>
            </DockPanel>
        </DockPanel>
    </Grid>
</Window>
