<Application x:Class="NeeView.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:system="clr-namespace:System;assembly=mscorlib"
             xmlns:local="clr-namespace:NeeView"
             Startup="Application_Startup"
             SessionEnding="Application_SessionEnding"
             Exit="Application_Exit">
    
    <Application.Resources>
        <ResourceDictionary>
            
            <ResourceDictionary.MergedDictionaries>

                <!-- Theme Test -->
                <!--
                <ResourceDictionary Source="/presentationframework.Aero;component/themes/aero.normalcolor.xaml" />
                -->

                <ResourceDictionary Source="/Styles/Fonts.xaml" />
                <ResourceDictionary Source="/Styles/Colors.xaml" />

                <ResourceDictionary Source="/Styles/CheckBrushes.xaml" />
                <ResourceDictionary Source="/Styles/IconGeometries.xaml" />

                <ResourceDictionary Source="/Styles/NVStyles.xaml" />
                <ResourceDictionary Source="/Styles/NVTheme.xaml" />
                <ResourceDictionary Source="/Styles/WindowStyles.xaml" />

            </ResourceDictionary.MergedDictionaries>


            <!-- Panel ListBox -->
            <ScrollUnit x:Key="PanelScrollUnit">Pixel</ScrollUnit>


        </ResourceDictionary>
    </Application.Resources>
</Application>
