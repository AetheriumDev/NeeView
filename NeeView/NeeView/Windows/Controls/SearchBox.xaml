<UserControl x:Class="NeeView.Windows.Controls.SearchBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:NeeView.Windows.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <Grid x:Name="Root" VerticalAlignment="Top">
        <Grid.Resources>
            <Style x:Key="ButtonStyle" TargetType="Button" BasedOn="{StaticResource IconButton}">
                <Setter Property="Width" Value="24" />
                <Setter Property="Height" Value="24" />
                <Setter Property="Margin" Value="0,2" />
            </Style>
        </Grid.Resources>
        <TextBox x:Name="SearchTextBox" Text="{Binding SearchKeyword, UpdateSourceTrigger=PropertyChanged, Delay=1000}" PreviewKeyDown="SearchTextBox_PreviewKeyDown" Padding="5,0,55,0"
                VerticalContentAlignment="Center" />
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="2,0">
            <Button x:Name="SearchButton" DockPanel.Dock="Right" VerticalAlignment="Center" Style="{StaticResource ButtonStyle}" Click="SearchButton_Click">
                <Image Source="{StaticResource ic_search_24px_b}" Width="16" Height="16" />
            </Button>
            <Button x:Name="ClearSearchButton" DockPanel.Dock="Right" VerticalAlignment="Center" Style="{StaticResource ButtonStyle}" Click="ClearSearchButton_Click">
                <Image Source="{StaticResource ic_clear_24px_b}" Width="12" Height="12" />
            </Button>
        </StackPanel>
    </Grid>
</UserControl>
