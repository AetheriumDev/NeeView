<UserControl x:Class="NeeView.Windows.Controls.PointInspector"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NeeView.Windows.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">

    <Grid x:Name="Root">
        <StackPanel>
            <DockPanel Margin="0,0,0,5">
                <TextBlock Text="X" Width="16"/>
                <TextBox DockPanel.Dock="Right" Width="70" Text="{Binding X}"/>
                <Slider Value="{Binding X}" Minimum="0" Maximum="1" TickFrequency="0.01" Margin="5,0"/>
            </DockPanel>
            <DockPanel Margin="0,0,0,5">
                <TextBlock Text="Y" Width="16"/>
                <TextBox DockPanel.Dock="Right" Width="70" Text="{Binding Y}"/>
                <Slider Value="{Binding Y}" Minimum="0" Maximum="1" TickFrequency="0.01" Margin="5,0"/>
            </DockPanel >
        </StackPanel>
    </Grid>
</UserControl>
