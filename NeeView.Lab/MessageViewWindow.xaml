<Window x:Class="NeeView.Lab.MessageViewWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NeeView.Lab"
        mc:Ignorable="d"
        Title="MessageViewWindow" Height="300" Width="300">
    <Grid>
        <DockPanel>
            <Button DockPanel.Dock="Bottom" HorizontalAlignment="Center" Content="Click!" Padding="20,10" Margin="10" Click="Button_Click"/>
            <local:MessageView x:Name="Target"/>
        </DockPanel>
    </Grid>
</Window>
