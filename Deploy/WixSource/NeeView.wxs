<?xml version="1.0" encoding="UTF-8"?>
<Wix xmlns="http://schemas.microsoft.com/wix/2006/wi"
         xmlns:netfx="http://schemas.microsoft.com/wix/NetFxExtension">
  <Product Id="*" Name="NeeView $(var.BuildVersion)" Version="$(var.BuildVersion)" Language="1041" Codepage="932" Manufacturer="NeeLaboratory" UpgradeCode="1615bc9c-ddfd-4d61-9ac1-3ebc5c8787a8">
    <Package InstallerVersion="500" Compressed="yes" InstallScope="perMachine" SummaryCodepage="932" Comments="NeeView is picture viewer."/>

    <MajorUpgrade DowngradeErrorMessage="新しいバージョンの NeeView が既にインストール済です。" />
    <MediaTemplate EmbedCab="yes" CompressionLevel="high"/>

    <Feature Id="ProductFeature" Title="NeeView" Level="1">
      <ComponentGroupRef Id="ProductComponents" />
      <ComponentGroupRef Id="DllComponents"/>
    </Feature>

    <!-- インストーラーUI設定 -->
    <!--
    <WixVariable Id="WixUIBannerBmp" Value="Resources\bannrbmp.bmp" />
    <WixVariable Id="WixUIDialogBmp" Value="Resources\dlgbmp.bmp" />
    -->
    <UIRef Id="WixUI_InstallDirEx" />
    <Property Id="WIXUI_INSTALLDIR" Value="INSTALLFOLDER" />

    <!-- アドバタイズショートカットを無効にする -->
    <Property Id="DISABLEADVTSHORTCUTS" Value="1" />

    <!-- コントロールパネルに表示されるアプリアイコン -->
    <Property Id='ARPPRODUCTICON'>MyIcon.exe</Property>

    <!-- 条件: .Net version -->
    <PropertyRef Id="WIX_IS_NETFRAMEWORK_46_OR_LATER_INSTALLED"/>
    <Condition Message='このセットアップを実行するためには、.NET Framework 4.6以降 がインストールされている必要があります。'>
      <![CDATA[Installed OR WIX_IS_NETFRAMEWORK_46_OR_LATER_INSTALLED]]>
    </Condition>

  </Product>

  <Fragment>
    <Directory Id="TARGETDIR" Name="SourceDir">
      <Directory Id="ProgramFilesFolder">
        <Directory Id="PFCompanyFolder" Name="NeeLaboratory">
          <Directory Id="INSTALLFOLDER" Name="NeeView" />
        </Directory>
      </Directory>
      <Directory Id="ProgramMenuFolder">
      </Directory>
    </Directory>
  </Fragment>

  <Fragment>

    <ComponentGroup Id="ProductComponents" Directory="INSTALLFOLDER">

      <Component Guid="*">
        <File Source="$(var.ContentDir)NeeView.exe" KeyPath="yes" Checksum="yes" >
          <netfx:NativeImage Id="ngen_NeeView.exe" Platform="32bit" Priority="0"/>
          <Shortcut Id="MyMenuShortcut" Directory="ProgramMenuFolder" Name="NeeView" WorkingDirectory="INSTALLDIR" Icon="MyIcon.exe" Advertise="yes"/>
        </File>
      </Component>

      <Component>
        <File Source="$(var.AppendDir)NeeView.exe.config" KeyPath="yes" />
      </Component>
      <Component>
        <File Source="$(var.ContentDir)README.html" KeyPath="yes"/>
      </Component>

    </ComponentGroup>

    <!-- アイコン -->
    <Icon Id="MyIcon.exe" SourceFile="$(var.ContentDir)NeeView.exe" />

  </Fragment>
</Wix>