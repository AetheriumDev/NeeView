<?xml version="1.0" encoding="UTF-8"?>

<?define ProductName = "NeeView $(var.ProductVersion)" ?>
<?define ExeName = "NeeView" ?>
<?define Bits = "all" ?>
<?define UpgradeCode = "1615bc9c-ddfd-4d61-9ac1-3ebc5c8787a8" ?>

<Wix xmlns="http://schemas.microsoft.com/wix/2006/wi"
         xmlns:netfx="http://schemas.microsoft.com/wix/NetFxExtension">
  <Product Id="*" Name="$(var.ProductName)" Version="$(var.BuildVersion)" Language="1041" Codepage="932" Manufacturer="NeeLaboratory" UpgradeCode="$(var.UpgradeCode)">
    <Package InstallerVersion="500" Compressed="yes" InstallScope="perMachine" SummaryCodepage="932" Comments="$(var.ExeName) is picture viewer."/>

    <MajorUpgrade DowngradeErrorMessage="新しいバージョンの $(var.ExeName) が既にインストール済です。" />
    <MediaTemplate EmbedCab="yes" CompressionLevel="high"/>

    <Feature Id="ProductFeature" Title="$(var.ExeName)" Level="1">
      <ComponentGroupRef Id="ProductComponents" />
      <ComponentGroupRef Id="NeeViewComponents" />
      <ComponentGroupRef Id="NeeViewSComponents" />
      <ComponentGroupRef Id="DllComponents"/>
      <ComponentRef Id="EssentialShortcuts" />
    </Feature>

    <!-- インストーラーUI設定 -->
    <!--
    <WixVariable Id="WixUIBannerBmp" Value="Resources\bannrbmp.bmp" />
    <WixVariable Id="WixUIDialogBmp" Value="Resources\dlgbmp.bmp" />
    -->

    <UIRef Id="WixUI_InstallDirEx"/>
    <Property Id="WIXUI_INSTALLDIR" Value="INSTALLFOLDER" />

    <!-- アドバタイズショートカットを無効にする -->
    <Property Id="DISABLEADVTSHORTCUTS" Value="1" />

    <!-- コントロールパネルに表示されるアプリアイコン -->
    <Property Id='ARPPRODUCTICON'>Icon_NeeView.exe</Property>

    <!-- 条件: .Net version -->
    <!--
    <PropertyRef Id="WIX_IS_NETFRAMEWORK_462_OR_LATER_INSTALLED"/>
    <Condition Message='このセットアップを実行するためには、.NET Framework 4.6.2以降 がインストールされている必要があります。'>
      <![CDATA[Installed OR WIX_IS_NETFRAMEWORK_462_OR_LATER_INSTALLED]]>
    </Condition>
    -->

  </Product>

  <Fragment>
    <Directory Id="TARGETDIR" Name="SourceDir">
      <Directory Id="ProgramFilesFolder">
        <Directory Id="PFCompanyFolder" Name="NeeLaboratory">
          <Directory Id="INSTALLFOLDER" Name="$(var.ExeName)" />
        </Directory>
      </Directory>
      <Directory Id="ProgramMenuFolder">
        <Directory Id="AppStartMenuDir" Name="$(var.ExeName)">
        </Directory>
      </Directory>
    </Directory>
  </Fragment>

  <Fragment>

    <ComponentGroup Id="ProductComponents" Directory="INSTALLFOLDER">
      <Component Guid="*">
        <File Source="$(var.ContentDir)README.html" KeyPath="yes"/>
      </Component>
    </ComponentGroup>

    <ComponentGroup Id="NeeViewComponents" Directory="INSTALLFOLDER">
      <Component Guid="*">
        <File Source="$(var.ContentDir)NeeView.exe" KeyPath="yes" Checksum="yes" >
          <netfx:NativeImage Id="ngen_NeeView.exe" Platform="all" Priority="0"/>
        </File>
      </Component>
      <Component>
        <File Source="$(var.AppendDir)NeeView.exe.config" KeyPath="yes" />
      </Component>
    </ComponentGroup>

    <ComponentGroup Id="NeeViewSComponents" Directory="INSTALLFOLDER">
      <Component Guid="*">
        <File Source="$(var.ContentDir)NeeViewS.exe" KeyPath="yes" Checksum="yes" >
          <netfx:NativeImage Id="ngen_NeeViewS.exe" Platform="32bit" Priority="0"/>
        </File>
      </Component>
      <Component>
        <File Source="$(var.AppendDir)NeeViewS.exe.config" KeyPath="yes" />
      </Component>
    </ComponentGroup>

    <!-- icon -->
    <Icon Id="Icon_NeeView.exe" SourceFile="$(var.ContentDir)NeeView.exe" />
    <Icon Id="Icon_NeeViewS.exe" SourceFile="$(var.ContentDir)NeeViewS.exe" />


    <!-- shortcut -->
    <DirectoryRef Id="AppStartMenuDir">
      <Component Id="EssentialShortcuts" Guid="*">
        <RegistryValue Root="HKCU" Key="Software\NeeLaboratory\NeeView" Name="InstalledStartMenuShortcut" Type="integer" Value="1" KeyPath="yes" />
        <RemoveFolder Id="AppStartMenuDir" On="uninstall" />
        <Shortcut Id="Shortcut_NeeView" Name="NeeView" Target="[INSTALLFOLDER]NeeView.exe" WorkingDirectory="INSTALLFOLDER" Icon="Icon_NeeView.exe"/>
        <Shortcut Id="Shortcut_NeeViewS" Name="NeeViewS" Target="[INSTALLFOLDER]NeeViewS.exe" WorkingDirectory="INSTALLFOLDER" Icon="Icon_NeeViewS.exe"/>
      </Component>
    </DirectoryRef>

  </Fragment>
</Wix>