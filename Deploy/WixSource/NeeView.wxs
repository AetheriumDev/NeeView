<?xml version="1.0" encoding="UTF-8"?>

<?define ProductName = "NeeView $(var.ProductVersion)" ?>
<?define ExeName = "NeeView" ?>
<?define Bits = "all" ?>
<?define UpgradeCode = "1615bc9c-ddfd-4d61-9ac1-3ebc5c8787a8" ?>

<?if $(var.culture) = "ja-jp" ?>
  <?define codepage = "932" ?>
<?else?>
  <?define codepage = "1252" ?>
<?endif?>

<Wix xmlns="http://schemas.microsoft.com/wix/2006/wi"
         xmlns:netfx="http://schemas.microsoft.com/wix/NetFxExtension">
  <Product Id="*" Name="$(var.ProductName)" Version="$(var.BuildVersion)" Language="!(loc.language)" Codepage="$(var.codepage)" Manufacturer="NeeLaboratory" UpgradeCode="$(var.UpgradeCode)">
    <Package InstallerVersion="500" Compressed="yes" InstallScope="perMachine" SummaryCodepage="$(var.codepage)" Comments="$(var.ExeName) is picture viewer."/>

    <MajorUpgrade DowngradeErrorMessage="!(loc.downgradeErrorMessage)" />

    <MediaTemplate EmbedCab="yes" CompressionLevel="high"/>

    <Feature Id="ProductFeature" Title="NeeView" Level="1" AllowAdvertise="no" Absent="disallow" Display="expand" ConfigurableDirectory="INSTALLFOLDER">
      <ComponentGroupRef Id="NeeViewComponents" />
      <ComponentGroupRef Id="DllComponents"/>
      <ComponentGroupRef Id="DocumentComponents" />
      <ComponentGroupRef Id="ScriptsComponents" />
      <ComponentRef Id="AppStartMenuDirComponent" />
      <Feature Id="ContextMenuFeature" Title="ContextMenu" Description="!(loc.contextMenuFeatureDescription)" Level="1" AllowAdvertise="no" >
        <ComponentGroupRef Id="RegistoryComponents" />
      </Feature>
    </Feature>

    <Property Id="INSTALLFOLDER">
      <RegistrySearch Id='InstallDirRegistry' Type='raw' Root='HKLM' Key='SOFTWARE\NeeLaboratory\NeeView' Name='InstallDir'/>
    </Property>

    <!-- UI -->
    <UIRef Id="WixUI_MondoEx" />
    <UIRef Id="WixUI_ErrorProgressText" />

    <!-- Disable advertise shortcuts -->
    <Property Id="DISABLEADVTSHORTCUTS" Value="1" />

    <!-- The application icon displayed on the control panel -->
    <Property Id='ARPPRODUCTICON'>App.ico</Property>

    <InstallExecuteSequence>
      <RemoveShortcuts>Installed AND NOT UPGRADINGPRODUCTCODE</RemoveShortcuts>
    </InstallExecuteSequence>
  </Product>

  <Fragment>
    <Directory Id="TARGETDIR" Name="SourceDir">
      <Directory Id="ProgramFilesFolder">
        <Directory Id="PFCompanyFolder" Name="NeeLaboratory">
          <Directory Id="INSTALLFOLDER" Name="$(var.ExeName)">
            <Directory Id="ScriptsFolder" Name="Scripts"/>
          </Directory>
        </Directory>
      </Directory>
      <Directory Id="ProgramMenuFolder">
        <Directory Id="AppStartMenuDir" Name="$(var.ExeName)">
        </Directory>
      </Directory>
    </Directory>
  </Fragment>

  <Fragment>

    <ComponentGroup Id="NeeViewComponents" Directory="INSTALLFOLDER">
      <Component Guid="*">
        <File Source="$(var.ContentDir)NeeView.exe" KeyPath="yes" Checksum="yes" >
          <netfx:NativeImage Id="ngen_NeeView.exe" Platform="all" Priority="0"/>
          <Shortcut Id="MyMenuShortcut" Directory="AppStartMenuDir" Name="NeeView" WorkingDirectory="INSTALLFOLDER" Advertise="yes"/>
        </File>
      </Component>
      <Component>
        <File Source="$(var.AppendDir)NeeView.exe.config" KeyPath="yes" />
      </Component>
      <Component>
        <RegistryValue Root="HKLM" Key="SOFTWARE\NeeLaboratory\NeeView" Name="InstallDir" Type="string" Value="[INSTALLFOLDER]" KeyPath="yes"/>
     </Component>
    </ComponentGroup>

    <ComponentGroup Id="DocumentComponents" Directory="INSTALLFOLDER">
      <Component Guid="*">
        <File Source="$(var.ContentDir)README.html" KeyPath="yes"/>
      </Component>
      <Component>
        <File Source="$(var.ContentDir)README.ja-jp.html" KeyPath="yes"/>
      </Component>
    </ComponentGroup>

    <ComponentGroup Id="ScriptsComponents" Directory="ScriptsFolder">
      <Component Guid="*">
        <File Source="$(var.ContentDir)Scripts\Sample.nvjs" KeyPath="yes"/>
      </Component>
    </ComponentGroup>

    <ComponentGroup Id="RegistoryComponents" Directory="INSTALLFOLDER">
      <Component>
        <RegistryValue Root="HKLM" Key="SOFTWARE\Classes\*\shell\OpenInNeeView" Type="string" Value="!(loc.openInNeeView)" KeyPath="yes"/>
        <RegistryValue Root="HKLM" Key="SOFTWARE\Classes\*\shell\OpenInNeeView" Name="Icon" Type="string" Value="&quot;[INSTALLFOLDER]\NeeView.exe&quot;,0"/>
        <RegistryValue Root="HKLM" Key="SOFTWARE\Classes\*\shell\OpenInNeeView\command" Type="string" Value="&quot;[INSTALLFOLDER]\NeeView.exe&quot; &quot;%1&quot;"/>
      </Component>
      <Component>
        <RegistryValue Root="HKLM" Key="SOFTWARE\Classes\Directory\shell\OpenInNeeView" Type="string" Value="!(loc.openInNeeView)" KeyPath="yes"/>
        <RegistryValue Root="HKLM" Key="SOFTWARE\Classes\Directory\shell\OpenInNeeView" Name="Icon" Type="string" Value="&quot;[INSTALLFOLDER]\NeeView.exe&quot;,0"/>
        <RegistryValue Root="HKLM" Key="SOFTWARE\Classes\Directory\shell\OpenInNeeView\command" Type="string" Value="&quot;[INSTALLFOLDER]\NeeView.exe&quot; &quot;%1&quot;"/>
      </Component>
      <Component>
        <RegistryValue Root="HKLM" Key="SOFTWARE\Classes\Directory\Background\shell\OpenInNeeView" Type="string" Value="!(loc.openInNeeView)" KeyPath="yes"/>
        <RegistryValue Root="HKLM" Key="SOFTWARE\Classes\Directory\Background\shell\OpenInNeeView" Name="Icon" Type="string" Value="&quot;[INSTALLFOLDER]\NeeView.exe&quot;,0"/>
        <RegistryValue Root="HKLM" Key="SOFTWARE\Classes\Directory\Background\shell\OpenInNeeView\command" Type="string" Value="&quot;[INSTALLFOLDER]\NeeView.exe&quot; &quot;%V&quot;"/>
      </Component>
    </ComponentGroup>

    <!-- icon -->
    <Icon Id="App.ico" SourceFile="$(var.AppendDir)App.ico" />

    <!-- startmenu dir -->
    <DirectoryRef Id="AppStartMenuDir">
      <Component Id="AppStartMenuDirComponent" Guid="*">
        <RegistryValue Root="HKCU" Key="Software\NeeLaboratory\NeeView" Name="InstalledStartMenuShortcut" Type="integer" Value="1" KeyPath="yes" />
        <RemoveFolder Id="AppStartMenuDir" On="uninstall" />
      </Component>
    </DirectoryRef>

  </Fragment>
</Wix>